<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemsViewModel"
            type="com.magicbluepenguin.testapplication.ui.main.itemsfragment.viewmodel.ItemsViewModel" />
        <variable
            name="items"
            type="androidx.lifecycle.LiveData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.itemsfragment.MainFragment">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pull_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:onRefreshListener="@{() -> itemsViewModel.refresh()}"
            app:refreshing="@{ itemsViewModel.isRefreshing }">

            <com.magicbluepenguin.testapp.bindings.BoundRecyclerView
                android:id="@+id/items_list_view"
                android:name="com.magicbluepenguin.testapplication.ui.main.MainFragment"
                isFetchingMore="@{ itemsViewModel.isFetchingMoreItems }"
                items="@{ items }"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:scrollbars="vertical"
                app:layoutManager="LinearLayoutManager"
                tools:context=".customerlistactivity.CustomerListActivity"
                tools:listitem="@layout/list_item" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>